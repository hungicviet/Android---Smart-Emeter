<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="btnStyleShakespeare" parent="@android:style/Widget.Button">
       <item name="android:textSize">30sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#FFFFFF</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/button_style_shakespeare</item>
       <item name="android:padding">10dip</item>
   </style>
   
    <style name="btnStyleOrange" parent="@android:style/Widget.Button">
       <item name="android:textSize">15sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#FFFFFF</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/button_style_orange</item>
       <item name="android:padding">10dip</item>
   </style>
   
   <style name="togglePower" parent="@android:style/Widget.Button.Toggle">
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textSize">40sp</item>
       <item name="android:textColor">#FFFFFF</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/togglebutton_style_power</item>
       <item name="android:padding">10dip</item>
   </style>
   
   <style name="toggleLight" parent="@android:style/Widget.Button.Toggle">
       <item name="android:layout_width">150dp</item>
       <item name="android:layout_height">150dp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textSize">30sp</item>
       <item name="android:textColor">#F0F00F</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">3</item>
       <item name="android:background">@drawable/togglebutton_style_light</item>
       <item name="android:padding">10dip</item>
   </style>
   
    <style name="TextviewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
      	<item name="android:textSize">50sp</item>
      	<item name="android:textColor">#1EA80F</item>/>
    </style>
    
    <style name="TextviewStyle.White">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
      	<item name="android:typeface">normal</item>
      	<item name="android:textSize">30sp</item>
      	<item name="android:textColor">#FFFFFF</item>/>
      	<item name="android:textStyle">bold</item>
    </style>
   
    <style name="LayoutStyleValue">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    
    <style name="TextViewValue">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#3F51B5</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="TextViewDV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="DisplayValue">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/background_style_green</item>
    </style>
    
    <style name="Theme.NoActionBar" parent="@style/Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
